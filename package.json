    "axios": "^1.13.2",
    "dayjs": "^1.11.19",
    "js-cookie": "^3.0.5",
    "next": "16.0.10",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-query-ease": "^0.0.6",
    "zustand": "^5.0.9"
