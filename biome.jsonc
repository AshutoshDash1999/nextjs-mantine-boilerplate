// TODO: make sure you have biome pluging installed for your code editor
{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json", // for code intellisence
  "vcs": {
    // for git integration
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    // for file management
    "ignoreUnknown": true,
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!dist",
      "!build"
    ]
  },
  "formatter": {
    // for code formatting
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf",
    "expand": "always"
  },
  "javascript": {
    // for javascript formatting
    // more options here: https://biomejs.dev/reference/configuration/#javascriptformatterarrowparentheses
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5",
      "arrowParentheses": "always"
    }
  },
  "linter": {
    // for code linting
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": "error",
        "useConsistentArrayType": "error",
        "noDefaultExport": "off"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noEmptyBlockStatements": "error",
        "noArrayIndexKey": "warn"
      },
      "complexity": {
        "noExtraBooleanCast": "error",
        "noUselessCatch": "error"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  }
}
